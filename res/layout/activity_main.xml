<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="45dp" android:background="@color/darkorange">
        <ImageButton android:id="@+id/id_iv_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="3dp" android:background="@drawable/showleft_selector" android:contentDescription="@string/content_description" android:onClick="showLeftMenu"/>
        <TextView android:id="@+id/head_title" android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center" android:text="@string/head_title" android:textColor="#fff" android:textSize="20sp" android:textStyle="bold"/>
        <ImageButton android:id="@+id/hand_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="13dp" android:layout_toLeftOf="@+id/scan_search" android:background="@drawable/hand_search_selector" android:contentDescription="@string/content_description"/>
        <ImageButton android:id="@+id/scan_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/hand_search" android:layout_alignParentRight="true" android:layout_marginRight="8dp" android:background="@drawable/scan_search_selector" android:contentDescription="@string/content_description"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framelayout_main"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnInformation"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_three"
            android:gravity="center"
            android:text="@string/information"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCollection"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_three"
            android:gravity="center"
            android:text="@string/collection"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPersonalCenter"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_style_three"
            android:gravity="center"
            android:text="@string/personal_center"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>