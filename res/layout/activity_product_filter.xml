<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:orientation="vertical" >
    <TableLayout
    android:id="@+id/process_tb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/tb_bg"
    android:stretchColumns="1,2"
    android:shrinkColumns="1,2">
  <TableRow>
        <TextView
            style="@style/td1_1"
            android:layout_marginTop="1dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:text="@string/indexNum" />
        <TextView
            style="@style/td1_1"
            android:layout_marginTop="1dip"
            android:layout_marginRight="1dip"
            android:layout_width="80dp"
            android:text="试验项目" />
        <TextView
            style="@style/td1_1"
            android:layout_marginTop="1dip"
            android:layout_marginRight="1dip"
            android:text="试验条件" />
    </TableRow>
    <TableRow>
        <TextView
            style="@style/td2"
            android:layout_marginLeft="1dip"
            android:layout_marginTop="1dip"
            android:layout_marginRight="1dip"
            android:text="1" />
        <TextView
            style="@style/td2"
            android:layout_marginTop="1dip"
            android:layout_marginRight="1dip"
            android:text="温度冲击" />
        <TextView
            style="@style/td2"
            android:layout_marginTop="1dip"
            android:layout_marginRight="1dip"
            android:text="条件A:-55～85℃,≤5min" />
    </TableRow>
    <TableRow>
        <TextView
            style="@style/td2"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:text="2" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="温度循环" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="5次,极限温度下的保持30min,转换时间≤5min" />
    </TableRow>
    <TableRow>
        <TextView
            style="@style/td2"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:text="3" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="耐焊接热" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="260±5℃,10±2s，恢复18-24h" />
    </TableRow>
    <TableRow>
        <TextView
            style="@style/td2"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:text="4" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="可焊性" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="焊槽法，235±2℃,5～10s" />
    </TableRow>
    <TableRow>
        <TextView
            style="@style/td2"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:text="5" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="高温寿命" />
        <TextView
            style="@style/td2"
            android:layout_marginRight="1dip"
            android:text="125℃,2U[R]，1000h，浪涌电流≤50mA" />
    </TableRow>
</TableLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >     
        <TextView
            android:layout_width="100dp"
            style="@style/td2"
            android:text="@string/p_filterReport" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/p_filterReport"
            style="@style/td2"/>
</LinearLayout>
</LinearLayout>
</ScrollView>
